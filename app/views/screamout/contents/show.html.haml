- model_class = Content
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
.span3.well
%table.table
  %tr
    %td
      %strong
        = model_class.human_attribute_name(:tags_array)
        \:
    %td= @content.tags_array
  %tr
    %td
      %strong
        = model_class.human_attribute_name(:url)
        \:
    %td= @content.url
  %tr
    %td
      %strong
        = model_class.human_attribute_name(:image_file_name)
        \:
    %td= @content.image_file_name
  %tr
    %td
      %strong
        = model_class.human_attribute_name(:rates)
        \:
    %td= @content.rates
  %tr
    %td
      %strong
        = model_class.human_attribute_name(:rating)
        \:
    %td= @content.rating
  %tr
    %td
      %strong
        = model_class.human_attribute_name(:user_id)
        \:
    %td= @content.user_id
  %tr
    = image_tag(@content.photo.url(:small))
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), |
    contents_path, :class => 'btn'                           |
  -#
  = link_to t('.edit', :default => t("helpers.links.edit")), |
    edit_content_path(@content), :class => 'btn'             |
  -#
  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
    content_path(@content),                                                                                      |
    :method => 'delete',                                                                                         |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
    :class => 'btn btn-danger'                                                                                   |
